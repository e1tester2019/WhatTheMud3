<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vM="clr-namespace:WhatTheMud3.ViewModels"
             x:DataType="vM:MainPageViewModel"
             x:Class="WhatTheMud3.MainPage"
             Title="{Binding Title}">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Button" x:Key="MyButtonStyle">
				<Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
				<Setter Property="BackgroundColor" Value="{AppThemeBinding Light=Blue,Dark=Orange}" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<ScrollView>
	    <VerticalStackLayout Spacing="2" Padding="2">
			<Entry x:Name="WellName" Placeholder="Well Name or Location" Text="{Binding MainPageWellName }"/>
			<Button Text="String Sections and Tools" Style="{StaticResource MyButtonStyle}" />
			<Button Text="Annulus and Open Holes"/>
			<Button Text="Directional Surveys"/>
			<Button Text="Pump Schedule"/>
			<Button Text="Rig Parameters"/>
			<Button Text="Save"/>
			<Button Text="Share"/>
			<Button Text="Toggle Dark Mode" 
			        Command="{Binding ToggleDarkModeCommand }"/>
	    </VerticalStackLayout>
    </ScrollView>

</ContentPage>
